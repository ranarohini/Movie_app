<%# movie search form %>
<%= form_tag(movies_path, method: "get") do %>
  <%= label_tag(:search, "Search:") %>
  <%= text_field_tag(:search, params[:search]) %>
  <%= button_tag("Search", value: "Search", class: "btn btn-default btn-sm") %>
  <%= link_to "Reset", movies_path, class: "btn btn-default btn-sm" %>
<% end %>